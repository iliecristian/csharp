<Window x:Class="Sudoku.Views.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku.Views"
        xmlns:vm="clr-namespace:Sudoku.ViewModels"
        mc:Ignorable="d"
        Title="Play" Height="450" Width="800">
    <Window.Resources>
        <vm:PlayVM x:Key="playVM"/>
    </Window.Resources>
    
    <Grid x:Name="MainGrid" DataContext="{Binding Source={StaticResource playVM}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7">
            <MenuItem Header="File">
                <MenuItem Header="New Game" Command="{Binding NewGameCommand}">
                    <MenuItem.CommandParameter>
                        <Binding ElementName="SudokuGrid" />
                    </MenuItem.CommandParameter>
                </MenuItem>
                    <MenuItem Header="Open game" />
                <MenuItem Header="Save Game" />
                <MenuItem Header="Statistics" />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Standard"/>
                <MenuItem Header="Custom">
                    <MenuItem Header="4x4" />
                    <MenuItem Header="4x4" />
                    <MenuItem Header="9x9" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <Image Grid.Column="1" Grid.Row="2" Source="{Binding Path=UserImage}" />
        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding Path=UserName}" HorizontalAlignment="Center"/>

        <!-- Sudoku Grid -->
        <UniformGrid Columns="6" x:Name="SudokuGrid" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="4" />

        <TextBlock Text="{Binding Path=GameOverText}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" />

    </Grid>
</Window>
