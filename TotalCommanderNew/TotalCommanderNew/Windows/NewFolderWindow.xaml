<Window x:Class="TotalCommanderNew.Windows.NewFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotalCommanderNew.Windows"
        mc:Ignorable="d"
        Title="Total Commander" Height="125" Width="300" ResizeMode="NoResize">
    <Grid>

        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="18" Margin="10,34,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="274"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="209,66,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click" />
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="129,66,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click" />
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="New Folder (directory)" VerticalAlignment="Top"/>

    </Grid>
</Window>
